{% extends 'base.html.twig' %}

{% block title %}Bestellingen{% endblock %}

{% block body %}
    <h1>Bestellingen</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bestellingen.id }}</td>
            </tr>
            <tr>
                <th>Voorgerecht</th>
                <td>{{ bestellingen.voorgerecht }}</td>
            </tr>
            <tr>
                <th>Nagerecht</th>
                <td>{{ bestellingen.nagerecht }}</td>
            </tr>
            <tr>
                <th>Prijs</th>
                <td>{{ bestellingen.prijs }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                {% set bestellingtotaal = bestellingen.aantal * bestellingen.prijs  %}
                <td>{{ bestellingtotaal|format_number({fraction_digit: 2}) }} }}</td>

                <td>{{ bestellingen.datum ? bestellingen.datum|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bestellingen_index') }}">back to list</a>

    <a href="{{ path('bestellingen_edit', {'id': bestellingen.id}) }}">edit</a>

    {{ include('bestellingen/_delete_form.html.twig') }}
{% endblock %}
