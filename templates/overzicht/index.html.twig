{% extends 'base.html.twig' %}

{% block title %}Hello OverzichtController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <tbody>
    {% for reservering in reserverings %}
        <tr>
            <td>{{ reservering.id }}</td>
            <td>{{ reservering.datum ? reservering.datum|date('Y-m-d') : '' }}</td>
            <td>{{ reservering.status ? 'Yes' : 'No' }}</td>
            <td>
                <a href="{{ path('reservering_show', {'id': reservering.id}) }}">show</a>
                <a href="{{ path('reservering_edit', {'id': reservering.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}
